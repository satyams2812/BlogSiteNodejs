            <form action="/login" method="POST"> 
              <% if (success_message != ''){ %>
            
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong><%= success_message %></strong> 
                  </div>
            
                <%} %>
             
                
             <% if( error != ''){%>
                <div class="alert alert-dismissible alert-info">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong><%= error %></strong> 
                  </div>
             <%} %>


                <div class="form-group">
                  <input type="email" placeholder="Enter Your Email Id" name="email" id="username" class="form-control"  aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" placeholder="Enter Your Password" name="password" id="password">
                </div>
                <a href="/forget" > Forget Password?</a>
                
